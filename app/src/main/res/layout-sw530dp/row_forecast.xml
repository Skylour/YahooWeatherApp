<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp">

    <TextView
        android:id="@+id/row_forecast_dayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textSize="20sp"/>

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/row_forecast_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        tools:src="@android:drawable/btn_star_big_on"/>

    <TextView
        android:id="@+id/row_forecast_lowText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textColor="#555599"
        android:textSize="20sp"
        tools:text="50\u00B0"/>

    <TextView
        android:id="@+id/row_forecast_highText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@id/row_forecast_lowText"
        android:textColor="#222222"
        android:textSize="20sp"
        tools:text="80\u00B0"/>

</RelativeLayout>